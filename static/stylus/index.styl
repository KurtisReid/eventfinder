light_blue = rgb(72, 137, 179)
light_yellow = rgb(242, 236, 154)
bg = url("../img/bg.png")

body
  //background bg
  background-size cover
  background-position center

section
  height 100%
  display block
  background bg
  background-size cover
  background-position center
  background-repeat no-repeat

footer
  color white

.megaphone-small
  float left
  font-size 45px
  color white
  margin-left 25px
  margin-top 10px

.fi-info
  font-size 45px
  margin-right 25px
  margin-top 10px
  color white
  float right

.logo
  text-align center
  color white
  font-size 14px

.megaphone-large
  font-size 250px

.move
  -webkit-animation-duration 1s
  animation-duration 1s
  -webkit-animation-fill-mode both
  animation-fill-mode both

@-webkit-keyframes hop
  0%, 20%, 50%, 80%, 100% webkit-transform: translateY(0)
  40% -webkit-transform translateY(-30px)
  60% -webkit-transform translateY(-15px)


@keyframes hop
  0%, 20%, 50%, 80%, 100% transform translateY(0)
  40% transform translateY(-30px)
  60% transform translateY(-15px)

.hop
  -webkit-animation-name hop
  animation-name hop

.fa-angle-double-down:hover
  -webkit-animation: bounce 1s;
  animation: bounce 1s;

desc
  margin-top -40px

@media (min-width: 500px)
  .logo
    margin-top 120px
    font-size 23px

  .fa-angle-double-down
    margin-top 180px

h1
  margin-top 30px
  text-align center
  color light_blue
