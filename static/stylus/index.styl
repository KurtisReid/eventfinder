light_blue = rgb(72, 137, 179)
light_yellow = rgb(242, 236, 154)
bg = url("../img/bg2.jpg")

body
  background-size cover
  background-position center

.first_page
  height 100%
  display block
  background bg
  background-size cover
  background-position center
  background-repeat no-repeat

footer
  color white

.megaphone-small
  float left
  font-size 45px
  color white
  margin-left 25px
  margin-top 10px

.fi-info
  font-size 45px
  margin-right 25px
  margin-top 10px
  color white
  float right

.logo
  text-align center
  color white
  font-size 14px

.megaphone-large
  font-size 250px

.fa-angle-double-down:hover
  -webkit-animation: bounce 1s;
  animation: bounce 1s;

desc
  margin-top -40px

.second_page
  height 100%
  display block

h1
  margin-top 30px
  text-align center
  color light_blue

.explanation
  color light_blue
  text-align center
  font-size 25px

.column.small-centered {
  margin-left: auto;
  margin-right: auto;
  float: none !important; }

#submit
  margin 0 auto
  font-size 2.0rem
  padding 1rem 1rem
  display block
  background-color light_blue
  border 1px solid transparent
  color #ffffff
  font-weight 300
  -webkit-border-radius 3px
  border-radius 3px
  -webkit-transition all 0.3s ease-in-out
  -moz-transition all 0.3s ease-in-out
  transition all 0.3s ease-in-out
  margin-bottom 30px

  &:hover
    background-color white
    color light_blue
    border-color light_blue

footer
  text-align center
  color white
  position absolute
  width 100%
  height 50px
  background-color light_blue
  text-align center
  font-size 17px
  padding-top 0.8em

footer a
  text-decoration none
  color white

  &:hover
    color white

@media (min-width: 500px)
  .logo
    margin-top 120px
    font-size 23px

  .fa-angle-double-down
    margin-top 180px

  .explanation
    margin-top 100px

  footer
    margin-top 14.5%

@media (max-width: 500px)
  #submit
    padding 0.5rem 0.5rem

  footer
    height 90px
